{
  "name": "chlu-marketplace-js",
  "version": "0.1.0",
  "main": "src/index.js",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.6.0"
  },
  "repository": "https://github.com/ChluNetwork/chlu-marketplace-js.git",
  "license": "MIT",
  "bin": {
    "chlu-marketplace": "src/bin.js"
  },
  "scripts": {
    "start": "node src/bin.js",
    "test": "mocha --opts tests/mocha.opts",
    "test-watch": "mocha --opts tests/mocha.opts --watch",
    "test-coverage": "nyc mocha --opts tests/mocha.opts",
    "lint": "eslint src tests"
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "chlu-ipfs-support": "https://github.com/ChluNetwork/chlu-ipfs-support.git",
    "chlu-wallet-support-js": "https://github.com/ChluNetwork/chlu-wallet-support-js.git",
    "express": "^4.16.2",
    "sequelize": "^4.35.1",
    "sqlite3": "^3.1.13"
  },
  "devDependencies": {
    "eslint": "^4.18.1",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1",
    "sinon": "^4.4.2",
    "supertest": "^3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-console": 0,
      "no-debugger": 1,
      "no-var": 1,
      "semi": [
        1,
        "always"
      ],
      "no-trailing-spaces": 0,
      "eol-last": 0,
      "no-underscore-dangle": 0,
      "no-alert": 0,
      "no-lone-blocks": 0
    },
    "globals": {}
  }
}
